# Development Dockerfile for Next.js application
FROM node:20-alpine

# Install dependencies only when needed
RUN apk add --no-cache libc6-compat

# Set working directory
WORKDIR /app

# Copy package files and npm config
COPY package.json package-lock.json* .npmrc ./

# Copy prisma schema first (needed for postinstall script)
COPY prisma ./prisma

# Align npm with lockfile generator and install dependencies
RUN npm install -g npm@11.6.2 \
    && npm ci

# Copy the rest of the application
COPY . .

# Expose port
EXPOSE 3000

# Set environment variables
# NODE_ENV is automatically set by Next.js - do not set it manually
ENV NEXT_TELEMETRY_DISABLED 1

# Start development server
CMD ["npm", "run", "dev"]
