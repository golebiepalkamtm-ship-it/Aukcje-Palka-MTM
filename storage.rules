rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public folder - public read access, authenticated write
    match /public/{allPaths=**} {
      allow read: if true;  // Każdy może czytać
      allow write: if request.auth != null;  // Tylko zalogowani mogą pisać
    }
    
    // User uploads - private (tylko właściciel)
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin upload access (dla skryptu upload-public-to-firebase.ts)
    match /{allPaths=**} {
      allow read: if true;  // Publiczny odczyt wszystkiego
      allow write: if request.auth != null;  // Authenticated write
    }
  }
}
