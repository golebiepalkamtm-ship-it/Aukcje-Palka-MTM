rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Aukcje - publiczne do czytania, tylko zalogowani mogą tworzyć
    match /auctions/{auctionId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid != null;
      allow update, delete: if request.auth.uid == resource.data.sellerId || 
                               request.auth.token.admin == true;
    }

    // Licytacje - autoryzowane
    match /auctions/{auctionId}/bids/{bidId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.bidderId;
      allow update: if request.auth != null && request.auth.uid == resource.data.bidderId;
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Profil użytkownika
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Powiadomienia
    match /notifications/{notificationId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.token.admin == true;
    }

    // Domyślna reguła - zabroń dostępu
    match /{document=**} {
      allow read, write: if false;
    }
  }
}